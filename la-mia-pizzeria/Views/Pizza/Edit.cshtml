@model la_mia_pizzeria_static.Pizza

@{
    ViewData["Title"] = "Modifica";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="text-center px-3">
    <h1>Inserisci</h1>

    <h4>Pizza</h4>
    <hr />

    <form asp-action="Edit" method="post" class="mb-3">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group mb-2">
            <label asp-for="name" class="control-label"></label>
            <input asp-for="name" class="form-control" />
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="description" class="control-label"></label>
            <input asp-for="description" class="form-control" />
            <span asp-validation-for="description" class="text-danger"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="price" class="control-label"></label>
            <input type="number" asp-for="price" class="form-control" />
            <span asp-validation-for="price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <a class="btn btn-outline-secondary" href="@Url.Action("Index", "Pizza")">Indietro</a>
            <input type="submit" value="Modifica" class="btn btn-primary" />
        </div>
    </form>

</div>

