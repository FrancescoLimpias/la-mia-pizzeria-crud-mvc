@model IEnumerable<la_mia_pizzeria_static.Models.DeveloperCommandModel>

@{
    ViewData["Title"] = "Developer Console";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Command</th>
            <th>Staus</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = 0;
        }
        @foreach (DeveloperCommandModel item in Model)
        {
            <tr>
                <td class="align-middle">@item.Name</td>
                <td class="align-middle">
                    @if (item.Status == null)
                    {
                        <span>idle</span>
                    }
                    else if ((bool)item.Status)
                    {
                        <span>Failed</span>
                        <i class="fa-solid fa-circle-exclamation" style="color: #e41111;"></i>
                    }
                    else
                    {
                        <span>Success</span>
                        <i class="fa-solid fa-check" style="color: #10da32;"></i>
                    }
                </td>
                <td>
                    <form asp-controller="Developer" asp-action="Execute" method="POST">
                        @Html.AntiForgeryToken()
                        <button name="index" class="btn btn-outline-warning" type="submit" value="@index">Run</button>
                    </form>
                </td>
            </tr>
            index++;
        }
    </tbody>
</table>
