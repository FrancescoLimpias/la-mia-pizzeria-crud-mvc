@model IEnumerable<la_mia_pizzeria_static.Models.DeveloperCommandModel>

@{
    ViewData["Title"] = "Developer Console";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<table class="table">

    <thead>
        <tr>
            <th>Command</th>
            <th>Staus</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>

        @{
            int index = 0;
        }
        @foreach (DeveloperCommandModel command in Model)
        {
            <tr>

                <!-- Command name -->
                <td class="align-middle">@command.Name</td>

                <!-- Command status (switch idle/success/fail) -->
                <td class="align-middle">
                    @if (command.Status == null)
                    {
                        <span>idle</span>
                    }
                    else if ((bool)command.Status)
                    {
                        <span>Success</span>
                        <i class="fa-solid fa-check" style="color: #198754;"></i>
                    }
                    else
                    {
                        <span>Failed</span>
                        <i class="fa-solid fa-circle-exclamation" style="color: #dc3545;"></i>
                    }
                </td>

                <!-- Command actions -->
                <td>
                    <form asp-controller="Developer" asp-action="Execute" method="POST">
                        @Html.AntiForgeryToken()
                        <button name="index" class="btn btn-outline-warning" type="submit" value="@index">Run</button>
                    </form>
                </td>

            </tr>
            index++;
        }
    </tbody>
</table>
